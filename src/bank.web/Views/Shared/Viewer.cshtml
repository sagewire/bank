@using bank.reports
@using bank.enums
@model ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";

}

@section Header {
    @if (Model.Organization != null)
    {
        @Html.Partial("_Header", new ProfileHeaderViewModel { Organization = Model.Organization, RawReports = Model.RawReports, Profile = Model.Profile })
    }
}

<main class="@(Model.Organization == null ? "" : "first")">
    @Html.Partial("template/_Rows", new RowsViewModel { Rows = Model.Layout.Rows })
</main>
