@using bank.reports
@using bank.enums
@model ReportViewModel

@{
    Layout = "~/Views/Shared/_LayoutSingle.cshtml";

}

@section Header {
    @if (Model.Layout.Header != null)
    {
        @Html.Partial("_" + Model.Layout.Header.Partial, new ProfileHeaderViewModel { Organization = Model.Organization, RawReports = Model.RawReports, Profile = Model.Profile })
    }
    else if (Model.Organization != null)
    {
        @Html.Partial("_OrgHeader", new ProfileHeaderViewModel { Organization = Model.Organization, RawReports = Model.RawReports, Profile = Model.Profile })
    }
}

<main class="@(Model.Organization == null ? "" : "first")">
    @Html.Partial("template/_Rows", new RowsViewModel { Rows = Model.Layout.Rows })
</main>



