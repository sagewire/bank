@model SocialMetaViewModel

<meta property="fb:app_id" content="@bank.Settings.FacebookAppId" />

<meta property="og:url" content="@Model.Url" />
<meta property="og:type" content="article" />
<meta property="og:title" content="@Model.Title" />
<meta property="og:description" content="@Model.Description" />
<meta property="og:image" content="@Model.ImageUrl" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />

<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="&#64;rateyourlender">
<meta name="twitter:title" content="@Model.Title">
<meta name="twitter:description" content="@Model.Description">
<meta name="twitter:image" content="@Model.ImageUrl">
<meta name="twitter:image:width" content="1200" />
<meta name="twitter:image:height" content="600" />