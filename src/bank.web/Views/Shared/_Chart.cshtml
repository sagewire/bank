@using bank.reports.charts
@model ChartItemViewModel

@if (!string.IsNullOrWhiteSpace(Model.ChartItem.ChartConfig.Title))
{
    <h5>@Model.ChartItem.ChartConfig.Resolve(Model.ChartItem.ChartConfig.Title)</h5>
}

<div id="@Model.ChartItem.ChartConfig.ChartId" 
     class="@Model.ChartItem.ChartConfig.CssClasses" 
     data-chart-type="@Model.ChartDataType" 
     data-series="@Model.ChartItem.ChartConfig.GetSeriesData(Model.Report.Columns).ToJson()"></div>

