@using bank.reports
@using bank.poco;

@model TemplateElement

@{
    var org = (Organization)Model.Data;
    var data = bank.data.graph.Cypher.Acquisitions(org.OrganizationId);
}


<link rel="stylesheet" href="~/assets/visjs/vis-network.min.css">

<style>
    #viz {
        height: 63vh;
        width: 100%;
    }

    .fullscreen #viz {
        height: 100vh;
    }

    #spinner {
        position: absolute;
        left: 0;
        right: 0;
        top: 10%;
        display: block;
    }

    #spinner .progress {
        position: relative;
        width: 200px;
        margin-left: auto;
        margin-right: auto;
    }
</style>

<div id="spinner">
    @*<i class="fa fa-circle-o-notch fa-spin fa-3x fa-fw"></i>*@
    <div class="progress text-center">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 3%"></div>
    </div>
</div>

<div id="viz"></div>


<script>
    var data = @(Html.Raw(data.ToJson()));
</script>



